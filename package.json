{
  "name": "@amboss/payload-3-openapi",
  "version": "0.1.4",
  "type": "module",
  "description": "OpenAPI documentation generator for PayloadCMS v3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "peerDependencies": {
    "payload": "^3.0.0"
  },
  "dependencies": {
    "@openapi-contrib/json-schema-to-openapi-schema": "^2.2.5",
    "lodash": "^4.17.21",
    "openapi-types": "^12.1.3",
    "ts-essentials": "^9.4.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/lodash": "^4.14.195",
    "@types/node": "^22.13.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amboss-mededu/payload-3-openapi-tools.git"
  },
  "keywords": [
    "payload",
    "payloadcms",
    "openapi",
    "swagger"
  ],
  "author": "AMBOSS SE",
  "license": "MIT",
  "bin": {
    "generate-openapi-docs": "./dist/create-api-docs/index.js"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "moduleFileExtensions": ["ts", "js", "json", "node"],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "extensionsToTreatAsEsm": [".ts"]
  }
}